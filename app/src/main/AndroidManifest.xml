<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.doitcheckit">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DoItCheckIt">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <!-- This makes sure that the opening screen
                is the main launching screen for the app -->
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".Countdown" />
        <activity android:name=".Menu"/>
        <activity android:name=".ListView"/>
        <activity android:name=".Priority"/>
    </application>

</manifest>
